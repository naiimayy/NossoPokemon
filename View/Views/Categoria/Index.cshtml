
@{
    ViewBag.Title = "Index";
}

<h3 class="text-center">Lista de Categorias</h3>
<div class="row">
    <div class="col-10 offset-1 mb-3">
        <a class="btn btn-primary float-right" href="@Url.Action("Cadastro")"><i class="fa fa-plus"></i>Nova Categoria</a>
    </div>
</div>

<div class="row">
    <div class="col-10 offset-1">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th width="25%">Código</th>
                    <th width="50%">Nome</th>
                    <th width="25%">Ação</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Model.Categoria categoria in ViewBag.Categorias)
                {
                    <tr>
                        <td>@categoria.Id</td>
                        <td>@categoria.Nome</td>
                        <td>
                            <a href="@Url.Action("Editar", new { id = categoria.Id})" class="btn btn-primary">
                                <i class="fas fa-pen"></i> Editar</a>
                            <a href="@Url.Action("Apagar", new { Id = categoria.Id })" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Apagar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th>Código</th>
                    <th>Nome</th>
                    <th>Ação</th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>

