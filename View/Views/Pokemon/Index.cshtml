
@{
    ViewBag.Title = "Index";
}

<h3>Lista de Pokemons</h3>
    
<div class="row">
    <div class="col-12">
        <a class="btn btn-primary float-right" href="@Url.Action("Cadastro")">Novo Pokemon</a>
    </div>
</div>
<table class="table table-striped table-hover table-bordered">
    <thead>
        <tr>
            <th>Código</th>
            <th>Categoria</th>
            <th>Nome</th>
            <th>Ação</th>
        </tr>
    </thead>

    <tbody>
        @foreach(Model.Pokemon pokemon in ViewBag.Pokemons)
        {
            <tr>
                <td>@pokemon.Id</td>
                <td>@pokemon.Categoria.Nome</td>
                <td>@pokemon.Nome</td>
                <td>
                    <a href="@Url.Action("Apagar", new {id = pokemon.Id })" class="btn btn-danger"><i class="fas fa-trash"></i> Apagar</a> 

                    <a href="@Url.Action("Editar", new {id = pokemon.Id})" class="btn btn-primary"><i class="fas fa-pen"></i> Editar</a>

                </td>
            </tr>
        }
    </tbody>

    <tfoot>
        <tr>
            <th>Código</th>
            <th>Categoria</th>
            <th>Nome</th>
            <th>Ação</th>
        </tr>
    </tfoot>
</table>

